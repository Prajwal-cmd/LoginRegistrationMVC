@model List<LoginRegistrationMVC.Models.User>
@{
    ViewBag.Title = "Search Users";
}

<h2>Search Users</h2>
<div>
    <input type="text" id="searchInput" placeholder="Search by ID or Email..." />
    <select id="filterSelect">
        <option value="email">Email</option>
        <option value="id">ID</option>
    </select>
    <div id="searchMessage" style="display: none; color: red;"></div>
</div>
<table id="usersTable" border="1" style="margin-top: 10px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody id="usersTableBody">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#searchInput").on("input", function () {
                var searchTerm = $(this).val();
                var filter = $("#filterSelect").val();
                var params = { searchTerm: searchTerm };
                if (filter) {
                    params.filter = filter;
                }
                var url = "@Url.Action("SearchData", "Account")" + "?" + $.param(params);

                $.ajax({
                    url: url,
                    type: "GET",
                    success: function (response) {
                        $("#usersTableBody").empty();
                        if (response.length > 0) {
                            $.each(response, function (index, user) {
                                $("#usersTableBody").append(
                                    "<tr><td>" + user.Id + "</td><td>" + user.Email + "</td></tr>"
                                );
                            });
                        } else {
                            $("#usersTableBody").append("<tr><td colspan='2'>No results found</td></tr>");
                        }
                    },
                    error: function (xhr) {
                        $("#searchMessage").text("Error fetching data.").show();
                    }
                });
            });
        });
    </script>
}